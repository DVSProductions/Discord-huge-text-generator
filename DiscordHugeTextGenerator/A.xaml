<Window x:Class="DiscordHugeTextGenerator.A"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
        Title="Discord Huge Text Generator" Height="300" Width="400">
	<Grid FocusManager.FocusedElement="{Binding ElementName=F}">
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<TextBox x:Name="F" FontSize="28" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" IsTabStop="True" IsEnabled="True" TabIndex="0"  TextChanged="B" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" AutoWordSelection="True"/>
		<TextBox x:Name="d" FontSize="10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" PreviewMouseDoubleClick="H"  BorderBrush="Transparent" Grid.Row="1" IsReadOnly="True" IsTabStop="False" AllowDrop="False" TextWrapping="Wrap" ToolTip="Double Tap to copy to clipboard"/>
		<Grid Margin="3">
			<CheckBox Name="G" HorizontalAlignment="Right" VerticalAlignment="Top" Content="Extended" Checked="B" Unchecked="B" ToolTip="Click me extend the substiution set" />
		</Grid>
	</Grid>
</Window>
